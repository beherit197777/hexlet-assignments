<h1>Список задач</h1>
<p><%= link_to "Создать задачу", new_task_path %></p>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Статус</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td>
          <%= link_to "Редактировать", edit_task_path(task) %>
          <%= link_to "Удалить", task, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
